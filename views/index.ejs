                <button type="button" class="btn btn-danger deleteBtn"id="deleteBtn">Suprimer</button>
                
            </div>
            
            <button type="submit" class="btn btn-primary" id="submitBtn">
                Ajouter
            </button>
            
            
            
        </form>


    
</div>

